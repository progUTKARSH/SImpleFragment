<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:orientation="horizontal" >

    <!-- To get the TextView to stack on top of the LinearLayout 
    below. Switch orientation above to vertical. Then switch the values
    for layout height and layout_weight -->
    
   <TextView
       android:layout_width="0px"
       android:layout_height="match_parent"
       android:layout_weight="2"
       android:background="#FFF8DC"
       android:padding="@dimen/component_padding"
       android:text="@string/main_textview" />

   <LinearLayout
       android:id="@+id/simplefragment"
       android:layout_width="0px"
       android:layout_height="match_parent"
       android:layout_weight="2"
       android:orientation="vertical"
       android:padding="@dimen/component_padding" />

</LinearLayout>